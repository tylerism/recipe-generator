{% extends "layout.twig" %}

{% block title %}Home - The Flavor Fix{% endblock %}

{% block header %}
    Recipe Generator
{% endblock %}

{% block header_description %}
    <p>Enter your idea for a recipe and click the button below to generate it using AI!</p>
{% endblock %}

{% block content %}
    <form id="recipe-form" class="recipe-form">
        <input type="text" id="recipe-prompt" class="form-input" placeholder="E.g., 'A spicy vegetarian dish'" required>
        <button type="submit" class="form-button">Generate Recipe</button>
    </form>
    <div id="loading-container">
        <div id="loading-bar"></div>
        <div id="loading-text">Starting AI engines...</div>
    </div>
    <div id="recipe-container"></div>
{% endblock %}
